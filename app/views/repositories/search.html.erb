<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
	<% if @repositories %>
		<ul>
		<% @repositories.each do |repo| %>
			<li>	
				<p><%= repo["name"] %></p>
				<p><%= link_to repo["html_url"], repo["html_url"] %></p>
				<p><%= repo["description"] %></p>
			</li>
		<% end %>
		</ul>	
	<% end %>
</div>
