<% if @results %>
  <h3>Search Results:</h3>
  <ul>
    <% @results.each do |item| %>
      <li>
        <%= item["name"] %><br> 
        <%= link_to item["html_url"], item["html_url"] %><br>
        <%= item["description"] %>
    </li>
    <% end %>
  </ul>
<% elsif @errors %>
  <p>There were errors</p>
<% end %>

<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

