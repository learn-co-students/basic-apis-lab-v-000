<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
<% if @repos %>
<ul>
  <% @repos.each do |r| %>
  <li>
    <%= r["name"] %><br>
    <a href="<%= r["html_url"] %>"><%= r["name"] %></a><br>
    <%= r["description"] %>
  </li>
  <% end %>
  </ul>
  <% end %>
</div>
