<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div class="">
  <%if @resp%>
  <ul>
    <%@repos.each do |repo|%>
    <li>
      <h5><%=repo["name"]%></h5>
      <p><%=link_to repo["html_url"], repo["html_url"]%></p>
      <p><%=repo["description"]%></p>
    </li>
    <%end%>
  </ul>
  <%end%>
</div>
