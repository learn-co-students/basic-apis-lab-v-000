<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <%= @git.body if @git %>
</div>
<div>
  <ul>
  <% if @github %>
    <%  @github.each do |repo| %>
    <li>
      <%= repo['name'] %>
      <%= link_to repo['html_url'], repo['html_url']%>
      <br>
      <%= repo['description'] %>
    </li>
      <% end %>
  </ul>
</div>
  <% end %>
