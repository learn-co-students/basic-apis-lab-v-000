<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
   <p><%= @error %></p>
  <% elsif @name %>
    <ul>
      <li>
        <%= @name %>
    </li>
    <li>
      <a href='<%= @url %>'><%= @url %></a>
    </li>
    <li><%= @description %></li>
   <% end %>
   </ul>
</div>
