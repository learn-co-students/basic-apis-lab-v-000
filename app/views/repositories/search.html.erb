<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @results %>
    <% @results.each do |r| %>
      <div>
        <p><%= r['items']['name'] %> - <a href="<%=r['items']['html_url']%>"></a></p>
        <p><%= r['items']['description'] %></p>
      </div> <hr>
    <% end %>
  <% elsif @error %>
    <p><%= @error %></p>
  <% end %>
</div>
