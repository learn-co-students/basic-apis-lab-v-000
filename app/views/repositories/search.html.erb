<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @items %>
    <ul>
    <% @items.each do |item| %>
      <li>
       <strong>
       <%= item["name"] %>
       </strong> 
       <a href="<%= item["html_url"] %>"><%= item["html_url"] %><a>
       - <%= item["description"] %>
      </li> 
    <% end %>  
    </ul>
  <% end %>
</div>

