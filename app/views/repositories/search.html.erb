<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<% if @repositories %>
  <ul>
    <% @repositories.each do |repo| %>
      <li>
        <h3><%= repo["name"] %></h3>
        <%= link_to repo["html_url"], repo["html_url"] %>
        <p><%= repo["description"] %></p>
      </li>
    <% end %>
  </ul>
<% end %>
