<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @results %>
    <% @results.each do |r| %>
      <div>
        <p><%= r['name'] %> - <%= link_to r['html_url'], r['html_url'] %></p>
        <p><%= r['description'] %></p>
      </div> <hr>
    <% end %>
  <% elsif @error %>
    <p><%= @error %></p>
  <% end %>
</div>
