<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>


<% if @items %>

<p><%= @items[0]["description"] %><br>
<%= link_to @items[0]["html_url"], @items[0]["html_url"]%>
</p>

<% end %>
