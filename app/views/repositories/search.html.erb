<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<% if @repos %>
  <div class="repos-list">
    <ul>
      <%= @repos.map do |repo| %>
        <li>
          <h2><%=repo["name"]%></h2>
            <p><%= link_to repo["html_url"], repo["html_url"] %></p>
            <p><%= repo["description"] %></p>
            </li>
      <% end %>
    </ul>
  </div>
  <% end %>
