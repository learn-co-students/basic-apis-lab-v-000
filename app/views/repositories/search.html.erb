<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<br><br><br><br>
<div >
  <%  if @items %>
    <% @items.each do |e|  %>
      <%= e["name"] %><br><br>
      <a href="<%= e['html_url']%>"><%= e["html_url"] %></a><br>
      <%= e["description"] %><br><br><br><br>
      <p>=================================</p>
    <% end %>
  <% end %>

</div>
