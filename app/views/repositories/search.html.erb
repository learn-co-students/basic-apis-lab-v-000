<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
  <%= @error %>
<% elsif @repositories %>
  <% @repositories.each do |repo| %>
    <h5><%= repo['name'] %></h5>
    <em>Link:</em> <%= link_to repo['html_url'], repo['html_url'] %>
    <p><em>Description:</em> <%= repo['description'] %> </p>
  <% end %>
<% end %>