
<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

	<% if @error %>
    	<p><%= @error %></p>
	<% elsif @repositories %>
	    <ul>
	      <% @repositories.each do |repo| %>
	        <li>
	          <%= repo["name"] %><br>
	          <%= repo["description"] %><br>
	          <%= link_to repo["html_url"], repo["html_url"] %><br><br>
	        </li>
	      <% end %>
	    </ul>
	<% end %>
