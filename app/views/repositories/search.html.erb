<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repos %>
<div>
  <ul>
    <% @repos.each do |repo| %>
      <li><%= link_to repo["name"], repo["html_url"] %> - <%= repo["description"] %></li>
    <% end %>
  </ul>
</div>
<% end %>
