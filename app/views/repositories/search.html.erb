<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @items %>
    <ul>
    <% @items.each do |venue| %>
      <li>
        <%= venue["name"] %><br>
        <%= venue["description"] %><br>
        <a href='<%= venue["html_url"] %>' > <%= venue["html_url"] %> </a>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
