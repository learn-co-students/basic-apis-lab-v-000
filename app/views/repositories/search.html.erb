<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @urls %>
    <ul>
      <% @urls.each do |u| %>
        <li>
          <%= link_to u["html_url"], u["html_url"] %><br>
          <%= u["description"]%>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
