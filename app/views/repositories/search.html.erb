<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @items %>
 <% @items.each do |item| %>
	<a href="<%= item["html_url"] %>"><%= item["html_url"] %></a><br>
	<%= item["description"] %><br>
 <% end %>
<% end %>
