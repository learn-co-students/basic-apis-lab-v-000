<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
 <% if  @resp %>
 <ul>
  <% @results.each do |rep| %>
    <li>
      Name:  <%= rep['name'] %> <br>
      Link: <%= link_to rep['html_url'] , rep['html_url'] %> <br>
      Description: <%= rep['description'] %> 
    </li>
  <% end %>
  </ul>
<% end %>
</div>

