<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<% unless @repos.nil? %>
  <ul>
    <% @repos.each do |repo| %>
      <li>
        <h2><%= repo["name"] %></h2>
        <a href="<%= repo["html_url"]%>"><%= repo["html_url"] %></a>
        <p><%= repo["description"] %></p>
      </li>
    <% end %>
  </ul>
<% end %>
