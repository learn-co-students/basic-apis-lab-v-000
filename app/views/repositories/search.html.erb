<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @query %>
  <div>
    <ul>
      <%= @query.each do |q| %>
        <li> <%= q['name'] %>, <%= link_to q['html_url'], q['html_url'] %>, <%= q['description']%>
        </li>
      <%end%>
    </ul>
  </div>
<%end%>
