<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div class="">
  <%if @repositories %>
    <%@repositories.each do |repo|%>
    <li>
      <%= repo['name']%><br>
      <%=repo['description']%><br>
      <a href="<%=repo['html_url']%>"><%=repo['html_url']%></a>
    </li>
    <%end%>
  <%end%>
</div>
