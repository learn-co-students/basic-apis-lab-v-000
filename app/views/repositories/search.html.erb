<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <%if @error%>
    <p><%= @error %></p>
  <%elsif @repos%>
    <ul>
      <%@repos.each do |repo|%>
        <li><h4><%= repo["name"]%></h4>
          <p><%= repo["description"]%></p>
          URL: <%= link_to repo["html_url"], repo["html_url"]%>
        </li>
     <%end%>
</ul>
 <%end%>
</div>
