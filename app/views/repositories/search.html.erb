<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
<% if @repos %>
  <ol>
  <% @repos.each do |repo| %>
      <li>Name: <%= repo["name"] %></li>
      <ul><%= link_to repo["html_url"], repo["html_url"] %><br>
       Description: <%= repo["description"] %></ul>
       <br>
    <% end %>  
  </oll>
<% end %>  
