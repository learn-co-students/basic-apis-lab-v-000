<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
  <p><%= @error %></p>
<% elsif @repos %>
  <% @repos.each do |repo| %>
    <ul>
      <li><%= repo["name"] %></li>
      <p><%= link_to repo["html_url"] , repo["html_url"] %>
      <br>
      <%= repo["description"] %>
      </p>
    </ul>
  <% end %>
<% end %>

