<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repositories %>
<% @repositories.each do |repo| %>
  <%= repo["owner"]["login"] %>
  <br>
  <%= link_to repo["html_url"], repo["html_url"] %>
  <br>
  <br />
  <%= repo["description"] %>
<% end %>
<% end %>
