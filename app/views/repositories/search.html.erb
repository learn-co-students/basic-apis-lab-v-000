<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>

  <div>
    <% if @error %>
      <p><%= @error %></p>
    <% elsif @repos %>
    <ul>
      <% @repos.each do |repo| %>
        <li>
          Name: <%= repo["name"] %><br>
          Link: <a href="<%= repo["html_url"] %>"><%= repo["html_url"] %></a>
          Description: <%= repo["description"] %><br>
        </li>
        <% end %>
      </ul>
      <% end %>
  </div>
<% end %>
