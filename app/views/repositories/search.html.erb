<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
      <p><%= @error %></p>
    <% elsif @gits %>
      <ul>
      <% @gits.each do |git| %>
        <li>
          <%= git['name'] %>
          <%= link_to git["html_url"], git['html_url'] %><br>
          <%= git['description'] %><br>
        </li>
      <% end %>
      </ul>
    <% end %>

</div>
