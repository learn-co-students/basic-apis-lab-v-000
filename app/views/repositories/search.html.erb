<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <ul>
    <% if @items %>
      <% @items.each do |item| %>
      <li>
        <%= item["name"] %><br>
        <%= item["html_url"] %><br>
        <%= item["description"] %><br>
      </li>
    <% end %>
  <% end %>
</ul>
</div>
