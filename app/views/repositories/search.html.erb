<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
  <div>
	  <ul>
		  <% if @repos %>
  			<% @repos.each do |repo| %>
				<%= repo['full_name'] %><br>
				<a href='<%= repo["html_url"] %>'> <%= repo['html_url'] %> </a><br>
				<%= repo['description'] %><br><br>
			<% end %>
		  <% end %>
	  </ul>
  <div>




<% end %>
