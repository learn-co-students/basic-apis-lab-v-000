<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repositories %>
    <ul>
      <% @repositories.each do |repo| %>
        <li>
          <p>Name: <%= repo['name'] %></p><br>
          <p>Link: <%= link_to repo['html_url'], repo['html_url'] %></p><br>
          <p>Description: <%= repo['description'] %></p><br>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
