<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<h2>results</h2>
<% if @items %>
<ul>
  <% @items.each do |item| %>
    <li><%= item["name"] %><br>
      <%= link_to item["html_url"], item["html_url"] %><br>
      <%= item["description"] %><br>
  </li>
  <% end %>
</ul>
<% end %>
