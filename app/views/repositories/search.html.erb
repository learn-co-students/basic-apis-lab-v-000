<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <div>
    <% if @error %>
    <p><%= @error %></p>
    <% elsif @repos %>
    <ul>
      <% @repos.each do |repo| %>
      <li>
        <%= repo["name"]%><br>
        <%= repo["owner"]["login"]%><br>
        <%= repo["description"]%><br>
        <%= link_to repo["html_url"], repo["html_url"]%>
      </li>
    <%end%>
  </ul>
<%end%>
