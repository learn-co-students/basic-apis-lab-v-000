<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @items %>
  <ul>
    <% @items.each do |obj| %>
      <li><%= obj["name"].capitalize %>
          <%= link_to "https://github.com/" + obj["full_name"], "https://github.com/" + obj["full_name"] %>
          <%= obj["description"] %>
      </li>
    <% end %>
  </ul>
  <% end %>
</div>



