<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @results %>
  <% @results.each do |result| %>
    <div>
      <%= result["name"] %>
      <%= result["description"] %>
      <%= link_to result["html_url"], result["html_url"] %>
    </div>
  <% end %>
<% end %>
