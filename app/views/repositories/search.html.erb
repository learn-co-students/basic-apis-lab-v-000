<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @items %>
    <ul>
    <% @items.each do |item| %>
      <li>
        Name: <%= item["name"] %><br>
        Description: <%= item["description"] %><br>
        URL: <a href="<%= item["url"] %>" ><%= item["url"] %></a><br>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>