<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <%if @error%>
    <p><%= @error %></p>
  <%else%>
  <ul>
    <%if @repos%>
    <%@repos.each do |repo|%>
      <li><%=repo['name']%></li>
      <li><%= repo['description']%></li>
      <li> <%=link_to repo['html_url'], repo['html_url'] %> </li> <br>
    <%end%>
  </ul>
  <%end%>

  <%end%>
</div>
