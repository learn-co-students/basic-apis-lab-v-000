<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repos %>
    <ul>
      <% @repos.each do |repo| %>
        <li>
          <%= repo["name"] %><br />
          <%= link_to repo['html_url'], repo['html_url'] %><%= repo["name"] %><br/>
          <%= repo['description'] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

