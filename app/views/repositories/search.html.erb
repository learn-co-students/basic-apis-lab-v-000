<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
	<h3><5= @error %></h3>
<% elsif @items %>
  <ul>
  	<% @items.each do |item| %>
  	<li>
  		<%= item['name'] %></a> |
  		<%= link_to item['html_url'], item['html_url'] %>
  		<%= item['description'] %>
  	</li>
  	<% end %>
  </ul>
<% end %>
