<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<ul>
  <% if @repositories %>
    <% @repositories.each do |repo| %>
      <li>
      Name: <%= repo["name"] %><br> 
      Description: <%= repo["description"] %><br>
      Link: <%= link_to(repo["html_url"], repo["html_url"]) %>
      </li>
    <% end %>
  <% end %>
</ul>
