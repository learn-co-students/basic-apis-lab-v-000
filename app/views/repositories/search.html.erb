<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @errors %>
    <p><%= @errors %></p>
  <% elsif @repositories %>
  <ul>
    <% @repositories.each do |repository| %>
      <li>
        <%= repository["name"] %>
        <%= link_to "https://github.com/#{repository["full_name"]}", "https://github.com/#{repository["full_name"]}" %><br>
        <%= repository["description"] %>
      </li>
    <% end %>
  </ul>
  <% end %>
</div>
