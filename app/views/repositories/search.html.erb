<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <ul>
    <% if @repos %>
      <% @repos.each do |repo| %>
        <li>
          <%= repo['name'] %> - <%= link_to repo['html_url'], repo['html_url'] %><br>
          <%= repo['description'] %>
        </li>
      <% end %>
    <% elsif @error %>
      <p><%= @error %></p>
    <% end %>
  </ul>
</div>
