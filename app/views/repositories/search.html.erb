<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @errors %>
    <p>In correct seach term</p>
<% elsif @repos %>
    <ul>
        <% @repos.each do |repo|%>

            <li><%= repo['name'] %></li>
            <li><%= repo['description'] %></li>
            <%= link_to repo['html_url'], repo['html_url'] %>
            <!-- <a href="repo['html_url']"><%= repo['html_url'] %></a> -->
        <% end %>
    </ul>
<% end %>
