<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repos %>
    <ul>
    <% @repos.each do |repo| %>
      <li>
        <%= repo["name"] %><br>
        <%= repo["description"] %><br>
        Repo URL: <a href="<%= repo["html_url"] %>"><%= repo["html_url"] %></a>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
