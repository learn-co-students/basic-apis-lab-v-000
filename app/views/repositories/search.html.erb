<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repos %>
    <ul>
    <% @repos.each do |repo| %>
      <li>
        <strong>Name: <%= repo["name"] %></strong> 
        <p><%= link_to repo["html_url"], repo['html_url'], target: :_blank %> <br></p>
        <strong>Description: </strong><%= repo["description"] %><br>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>