<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div id="results">
	<% if @repos %>
		<% @repos.each do |r| %>
			<ul>
				<li><%= r["name"] %></li>
				<li><a href="<%= r["html_url"]%>"><%= r["html_url"] %></a></li>
				<li><%= r["description"] %></li>
			</ul>
		<% end %>
	<% end %>
</div>