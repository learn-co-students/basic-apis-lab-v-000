<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repositories %>
    <ul>
      <% @repositories.each do |rep| %>
      <li>
        <%= rep["name"] %><br>
        <a href="<%= rep["html_url"] %>"><%= rep["html_url"] %></a><br>
        <%= rep["description"] %>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
