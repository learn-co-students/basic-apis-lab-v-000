<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<%if @rep %>
  <% @rep.each do |r| %>
    <%= r["name"] %>
    <%= r["description"] %>
    <%= link_to r["html_url"], r["html_url"] %> <br>
  <%end%>
<%end%>
