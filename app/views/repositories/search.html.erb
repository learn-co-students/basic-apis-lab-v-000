<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repositories %>
    <ul>
    <% @repositories.each do |repo| %>
      <li>
        Name: <%= repo["name"] %><br>
        Description: <%= repo["description"] %><br>
        <%= link_to repo["html_url"], repo["html_url"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
