<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
    <% if @items  %>
      <% @items.each do |item| %>
        <p>
          <%= item["name"] %>
          <%= link_to item["html_url"], item["html_url"] %>
          <%= item["description"] %>
        </p>
    <% end %>

  <% end %>
</div>

