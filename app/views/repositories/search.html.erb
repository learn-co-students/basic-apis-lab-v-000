<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @results %>
    <% @results.each do |result| %>
      <li>
        <%= result["name"] %>
        <a href="<%= result["html_url"] %>"><%= result["html_url"] %></a>
        <%= result["description"] %>
      </li>
    <% end %> 
  <% end %>
</div>