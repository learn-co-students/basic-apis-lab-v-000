<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @parsed %>
  <% @parsed["items"].each do |repo| %>
   <br>
   <%= repo["name"] %>
   <br>
   <%= repo["description"] %>
   <br>
   <%= link_to repo["html_url"], repo["html_url"] %>
   <br>
  <% end %>
<% end %>
