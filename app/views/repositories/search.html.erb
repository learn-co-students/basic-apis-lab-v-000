<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
	<% if @error.present? %>
		<p><%= @error %></p>
	<% elsif @results.present? %>
		<ul>
			<% @results.each do |result| %>
				<li>
					<%= result['full_name'] %><br>
					<%= link_to "#{result['html_url']}", result['html_url'] %>
					<%= result['description'] %>
				</li>
			<% end %>
		</ul>
	<% end %>
</div>

