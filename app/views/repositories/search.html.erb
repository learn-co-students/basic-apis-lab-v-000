<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
<ul>
<% if @error %>
  <li><%= @error %></li>
<% elsif @repos %>
  <% @repos.each do |r| %>
    <li>
      <%= r['name'] %>
      <%= link_to r['html_url'], r['html_url'] %>
      <%= r['description'] %>
    </li>
  <% end %>
<% end %>
</ul>
</div>
