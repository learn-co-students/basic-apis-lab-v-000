<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @results %>
    <ul>
    <% @results.each do |r| %>
      <li>
        <%= r['name'] %><br>
        <%= link_to r['html_url'], r['html_url'], target: '_blank' %><br>
        <%= r['description'] %><br>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>

