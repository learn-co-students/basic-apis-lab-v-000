<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <%if @items %>
    <ul>
    <% @items.each do |item| %>
      <li>
        Description: <%= item["description"] %> <br>
        URL link:<a href= <%= item["html_url"] %>><%= item["html_url"] %></a>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
