<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p> <%= @error %> </p>
  <% elsif @repos %>
    <ul>
      <% @repos.each do |repo| %>
        <li>
          <a href="<%= repo["html_url"] %>"> <%= repo["name"] %></a>
           - <%= repo["description"] %>
           <p> <a href="<%= repo["html_url"] %>"> <%= repo["html_url"] %></a> </p>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
