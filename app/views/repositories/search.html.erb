<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @items %>
    <ul>
    <% @items.each do |item| %>
      <li><%= link_to(item["html_url"], item["html_url"]) %></li>
      <li><%= item["description"] %></li>
      <br>
    <% end %>
  </ul>
  <% end %>
</div>
