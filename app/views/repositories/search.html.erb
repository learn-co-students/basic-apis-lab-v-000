<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @results %>
  <ul>
    <% @results.each do |result| %>
      <li>
        <h3><%= result['name'] %></h3>
        <%= link_to result['html_url'], result['html_url'] %>
        <p><%= result['description'] %></p>
      </li><br>
    <% end %>
  </ul>
  <% end %>
</div>
