<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repos %>
    <h1>Search Results</h1>
      <ul>
        <% @repos.each do |repo| %>
          Name: <%= repo['name'] %><br />
          URL: <a href="<%= repo['html_url'] %>"><%= repo['html_url'] %></a><br />
          Description: <%= repo['description'] %><br />
        <% end %>
      </ul>
  <% end %>
</div>
