<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @items %>
    <ul>
    <% @items.each do |item| %>
      <li>
        <%= item["name"] %><br>
        <a href="<%= item["html_url"] %>"><%= item["html_url"] %><br></a>
        <%= item["description"] %><br>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
