<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p>
      <%= @error %>
    </p>
  <% elsif @repos %>
    <ul>
      <% @repos['items'].each do |repo| %>
        <li>
          <strong><%= repo['name'] %></strong><br />
          <a href="<%= repo['html_url'] %>"><%= repo['html_url'] %></a><br />
          <%= repo['description'] %>
        </li>
      <% end %>
    </ul>
  name
  link to repo
  description

  <% end %>
</div>
