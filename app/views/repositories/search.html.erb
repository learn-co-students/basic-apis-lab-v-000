<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search on Github" %>
<% end %>
<div>
  <ul>
    <% if @repos %>
      <% @repos.each do |repo| %>
        <li>
          <%= repo["name"] %>
          <a href="<%= repo["html_url"] %>"><%= repo["html_url"] %></a>
          <%= repo["description"] %>
        </li>
        <% end %>
      <% end %>
  </ul>
</div>
