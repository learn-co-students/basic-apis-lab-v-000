<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<% if @result %>
  <% @result.each do |r| %>
      <%= r["name"] %><br>
        <%= link_to r["html_url"], r["html_url"] %>
        <%= r["description"] %>
  <% end %>
<% end %>
