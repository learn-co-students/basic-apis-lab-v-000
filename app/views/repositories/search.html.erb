<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<H2>Results</H2>
<div>
  <% if @results %>
    <%= @results.each do |result| %>
      <h3><%= result["name"] %></h3>
      <a href="<%= result["html_url"]%>"><%= result["html_url"] %></a>
      <p><%= result["description"]%></p>
    <% end %>
  <% end %>
</div>