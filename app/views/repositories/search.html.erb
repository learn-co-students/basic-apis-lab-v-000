<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<!-- Display the search results on the page. Include the name, a link to the repository, and the description. -->
<div>
  <br>

<% if @results %>

  <%= @results.each do |result| %>

     NAME <%= result["name"] %><br>
     DESCRIPTION <%= result["description"] %><br>
     LINK <%= link_to result["html_url"], result["html_url"] %><br>

  <% end %>
<% end %>
