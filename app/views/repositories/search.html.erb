<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>

  <% if @names %>
    <ul>
    <% @names.each do |name| %>
      <li>
        <%= name["name"] %><br>
        <%= link_to name["html_url"], name["html_url"]%><br>
        Description<%= name["description"]%>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
