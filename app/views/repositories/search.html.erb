<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<h1>Repository Display</h1>
<div>
    <%if @items%>
      <%@items.each do |item|%>
        <%= item["name"] %>
        <%= link_to item["html_url"], item["html_url"] %>
        <%= item["description"] %>
      <% end %>
    <%end%>
</div>
