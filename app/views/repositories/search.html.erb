<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
<% elsif @items %>
   <ul>
        <% @items.each do |item| %>
        <li>
        <%= item["name"] %> - <%= link_to item["owner"]["login"], item["owner"]["url"] %> - <%= link_to item["html_url"], item["html_url"] %> <p><%= item["description"] %></p>
        </li>
        <% end %>
        
    </ul>
<% end %>