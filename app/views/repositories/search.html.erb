<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @results %>
<ul>
  <% @results.each do |result| %>
    <li><h4><%= result["name"] %>: <%= link_to result["html_url"], result["html_url"] %></h4>
        <p><%= result["description"] %></p>
    </li>
  <% end %>
</ul>
<% end %>

