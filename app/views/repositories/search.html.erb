<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<h2>Search Results</h2>
<ul>
  <% if @items %>
    <% @items.each do |item| %>
      <li><a href="<%= item['html_url'] %>"><%= item['name'] %> - <%= item['description'] %></a></li>
    <% end %>
  <% end %>
</ul>
