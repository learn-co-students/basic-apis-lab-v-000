<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repos %>
  <ul>
    <% @repos.each do |re| %>
      <li><a href="<%= re['html_url'] %>"><%= re["html_url"] %></a></li>
    <% end %>
  </ul>
<% elsif @error %>
  <%= @error %>
<% end %>
