<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
		<% if @repositories %>
    <ul>
		<% @repositories.each do |r| %>
			<li>
				<p>Name: <%=r["name"] %></p>
				<p>Description: <%=r["description"] %></p>
				<%= link_to r["html_url"], r["html_url"] %>
			</li>
		<% end %>
    </ul>
    <% end %>
</div>


