<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @repos %>
    <% @repos.each do |repo| %>
      <p><%= repo['name'] %></p>
      <p><%= repo['description'] %></p>
      <p><%= link_to repo['html_url'], repo['html_url'] %></p>
    <% end %>
  <% end %>
</div>
