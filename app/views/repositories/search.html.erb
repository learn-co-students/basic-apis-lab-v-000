<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @results %>
  <ul>
  <% @results.each do |result| %>
    <li>
      <span><%= result['name'] %> <a href="<%= result['html_url'] %>"><%= result['html_url'] %></a></span>
      <p><%= result['description'] %></p>
    </li>
  <% end %>
  </ul>
<% end %>
