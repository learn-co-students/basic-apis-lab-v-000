<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @repos %>
    <% @repos.each do |repo| %>
    <ul>
      <li><%=repo['name']%></li>
      <li><%=link_to repo['html_url'], repo['html_url']%></li>
      <li><%=repo['description']%></li>
    </ul>
  <%end%>
    
  <%end%>

</div>

