
<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<%if @results %>
	<ul>
		<%@results.each do |result| %>
			<li>
				Name: <%= result["name"] %><br>
				Link: <a href="<%=result["html_url"]%>"><%=result["html_url"]%></a><br>
				Description: <%= result["description"] %><br>
			</li><br>
		<%end%>
	</ul>
<%end%>

