<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div>
  <% if @repositories %>
    <% @repositories.each do |repo| %>
      <p>
        <%= repo['name'] %><br>
        <a href="<%= repo['html_url'] %>"><%= repo['html_url'] %></a><br>
        <%= repo['description'] %><br>
      </p>
    <% end %>
  <% elsif @error %>
    <p><%= @error %></p>
  <% end %>
</div>
