<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @repos %>
<ul>
<% @repos.each do |x| %>
<li><%= x['name'] %><br>
<%= link_to x['html_url'], x['html_url'] %><br>
<%= x['description'] %>
<% end %>
</li>
</ul>
<% else %>
<div><%= @error %></div>

<% end %>