<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <ul>
  <% if @repos %>
    <% @repos.each do |repo| %>
      Name: <li><%= repo['name'] %> - <%= link_to repo['html_url'], repo['html_url'] %></li>
      <p>Description <%= repo['description'] %></p>
    <% end %>
  <% end %>
  </ul>
</div>
