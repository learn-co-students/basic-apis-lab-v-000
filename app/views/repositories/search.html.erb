
<h1>Search Github Repositories</h1>

<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @repositories %>
    <ul>
    <% @repositories.each do |repo| %>
      <li>



        <a href="https://github.com/dtrupenn/Tetris">"https://github.com/dtrupenn/Tetris"</a>

        <%= link_to(repo["name"], repo["html_url"]) %><br>

        <%= repo["description"] %>

      </li>
    <% end %>
    </ul>
  <% end %>
</div>
