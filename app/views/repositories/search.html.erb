<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @results %>
    <ul>
      <% @results.each do |repo| %>
        <h3><%= repo["name"] %></h3> <br>
        <p><%= repo["description"] %></p>
        <%= link_to repo["html_url"], repo["html_url"] %><br>
      <% end %>
    </ul>
  <% end %>
</div>
