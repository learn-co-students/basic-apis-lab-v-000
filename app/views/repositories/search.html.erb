<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
	<% if @resp %> 
		<% @body.each do |item| %>
		<%= item ["name"]%>
		<p><%= item["full_name"] %></p>
		<p><%= item["description"] %></p>
		<p><%= link_to item["html_url"], item ["html_url"]%></p> <br>
		<%end%>
	<%end%>
		
</div>