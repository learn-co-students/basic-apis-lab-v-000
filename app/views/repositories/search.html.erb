<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<br><div>
<% if @resp %>
  <% @search.each do |item| %>
    <strong><%= item["name"] %></strong>
    <p><%= item["description"] %></p>
    <p><%= link_to item["html_url"], item["html_url"]%></p> <br>
  <% end %>
<% end %>
</div>

