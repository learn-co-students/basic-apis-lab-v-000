<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repositories %>
    <ul>
    <% @repositories.each do |item| %>
      <li>
        <%= item["name"] %><br>
        Link: <%= link_to item["html_url"], item["html_url"] %><br>
        <%= item["description"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
